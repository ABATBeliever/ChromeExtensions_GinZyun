{
  "manifest_version": 3,
  "name": "銀盾 Page Blocker",
  "version": "2.1",
  "description": "指定したURLパターンに一致するページの表示をブロックします。EdgeAddon向け版です。",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Page Blocker"
  },
  "web_accessible_resources": [
    {
      "resources": ["block.html", "block.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
